{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "shell:allow-open",
    "dialog:default",
    "dialog:allow-ask",
    "dialog:allow-message",
    "updater:default",
    "updater:allow-check",
    "updater:allow-download-and-install",
    "process:allow-restart",
    "process:default",
    "shell:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "args": [
            "-framerate",
            {
              "validator": "\\d+"
            },
            "-i",
            {
              "validator": "\\S+"
            },
            "-c:v",
            "libx264",
            "-pix_fmt",
            "yuv420p",
            {
              "validator": "\\S+"
            }
          ],
          "name": "binaries/ffmpeg",
          "sidecar": true
        }
      ]
    }
  ]
}